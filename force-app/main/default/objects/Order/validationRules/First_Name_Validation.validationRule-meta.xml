<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>First_Name_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX(First_Name__c,&quot;^[a-z  A-Z]*$&quot;))</errorConditionFormula>
